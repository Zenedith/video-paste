style
  body {
    margin: 0 auto;
  }

  .content {
    width: 1180px;
    margin: 0 auto;
  }

  .info {
    padding: 10px;
    border: 1px solid #CCC;
    text-align: center;
   }
   .item {
    border: 1px solid #CCC;
    margin-bottom: 30px;
  }
   .method {
    clear: both;
    background-color: whiteSmoke;
    border: 1px solid #CCC;
    height: 150px;
    margin-bottom: 30px;
  }
  ul {
    margin: 0;
    padding: 0;
    list-style: none;
  }
  .method_url, .method_type, .method_status, .method_desc, .err_error, .err_code {
    float: left;
    padding: 2px 10px;
  }
  .method_error_codes {
    float: right;
    padding: 16px 25px;
  }
  .method_url {
    width: 325px;
  }
  .method_desc {
    width: 440px;
  }
  .left {
    float: left;
    width: 880px;
  }
  .method_sample_response {
    padding: 10px;
    height: 40px;
    background-color: white;
  }
  .method_post_data {
    padding: 10px;
    height: 40px;
    clear: both;
    background-color: white;
    border-bottom: 1px solid #CCC;
  }

  .error_response {
    clear: both;
    background-color: whiteSmoke;
    border: 1px solid #CCC;
  }

  .err {
    clear: both;
    border: 1px solid #CCC;
  }

  .err_error {
    width: 410px;
  }

  err_code {
    width: 410px;
  }

