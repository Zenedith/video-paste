  h1.info Error handling

  div.error_response
    div.struct
      pre
        |{
        |  error: string,
        |  data: string,
        |  code: int,
        |  msg: string
        | }

  div.erors
    div.err
      div.err_error error value
      div.err_code code value
    div.err
      div.err_error ERR_BAD_REQUEST
      div.err_code 400
    div.err
      div.err_error ERR_UNAUTHORIZED
      div.err_code 401
    div.err
      div.err_error ERR_NOT_ALLOWED
      div.err_code 403
    div.err
      div.err_error ERR_NOT_FOUND
      div.err_code 404
    div.err
      div.err_error ERR_METHOD_NOT_ALLOWED
      div.err_code 405
    div.err
      div.err_error ERR_API_INTERNAL_ERROR
      div.err_code 50x
    div.err
