style
  body {
    margin: 0 auto;
  }

  .content {
    width: 1180px;
    margin: 0 auto;
  }

  .info {
    padding: 10px;
    border: 1px solid #CCC;
    text-align: center;
   }
     .method {
    clear: both;
    background-color: whiteSmoke;
    border: 1px solid #CCC;
    height: 150px;
  }
  ul {
    margin: 0;
    padding: 0;
    list-style: none;
  }
  .method_url, .method_type, .method_status, .method_desc, .method_sample_response, .err_error, .err_code {
    float: left;
    padding: 2px 10px;
  }
  .method_error_codes {
    float: right;
    padding: 2px 10px;
  }
  .method_url {
    width: 390px;
  }
  .method_desc {
    width: 410px;
  }
  .method_sample_response {
    padding: 10px;
    width: 800px;
    height: 100px;
    clear: both;
    background-color: white;
  }

  .error_response {
    clear: both;
    background-color: whiteSmoke;
    border: 1px solid #CCC;
  }

  .err {
    clear: both;
    border: 1px solid #CCC;
  }

  .err_error {
    width: 410px;
  }

  err_code {
    width: 410px;
  }

div.content
  h1.info Available api methods

  div.method
    div.method_url /api/getSession/:apiKey
    div.method_type GET
    div.method_desc get session for unauthorized user
    div.method_sample_response {sess: string, userId: int}
